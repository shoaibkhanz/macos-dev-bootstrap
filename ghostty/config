# Ghostty Configuration
# Dark theme optimized for OpenCode

# Font Configuration
font-family = GeistMono Nerd Font Mono
font-size = 18
font-style-bold = Bold
adjust-cell-height = 15%

# Theme & Colors - Dark black background matching OpenCode
# theme = none
background = 000000
foreground = e6e6e6
# OpenCode-inspired color palette
palette = 0=#000000
palette = 1=#ff5555
palette = 2=#50fa7b
palette = 3=#f1fa8c
palette = 4=#6272a4
palette = 5=#bd93f9
